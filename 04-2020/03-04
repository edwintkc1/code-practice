#include <iostream>
using namespace std;

void findWord(char* arr, int* i, int* count, int arrlen) {
	int length = 0;

	while (arr[*i] != ' ' && *i<arrlen) {
		*i+=1;
		length++;
	}
	*count+=1;
	cout << "Word " << *count << " has " << length << " characters." << endl;
}

int main() {
	cout << "Enter the content of the strings:\n";
	char input[100];
	cin.getline(input, 100);
	int length = 0, count = 0;
	while (input[length] != '\0') {
		length++;
	}
	for (int i = 0; i < length; i++) {
		if (input[i] != ' ')
			findWord(input, &i, &count, length);

	}
	cout << "The number of words in the string is: " << count << endl;

	return 0;
}
