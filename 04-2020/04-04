// 雜題
// #29
// input a string, ouput its suffix in asccending order.
// For example: we have a string bcdfg. It has 5 suffixes, which are bcdfg, cdfg, dfg, fg, g.
// input: suffix
// output: ffix
           fix
           ix
           suffix
           uffix
           x

#include <iostream>
#include <string>
using namespace std;

void swap(char s1[], char s2[]) {
	char temp[50];
	int i;
	for (i = 0; s1[i] != '\0'; i++)
		temp[i] = s1[i];
	temp[i] = s1[i];                 

	for (i = 0; s2[i] != '\0'; i++)
		s1[i] = s2[i];
	s1[i] = s2[i];						

	for (i = 0; temp[i] != '\0'; i++)
		s2[i] = temp[i];
	s2[i] = temp[i];					
}

int main() {
	string input, ans[100];
	cout << "Enter the string:\n";
	cin >> input;
	cout << "\nBefore:\n";
	for (int i = 0 ; i < input.length(); i++) {
		string temp = "";
		for (int j = i; j < input.length(); j++) {
			temp += input[j];
		}
		ans[i] = temp;
		cout << ans[i] << endl;
	}

	for (int i = 0; i < input.length() - 1; i++) {
		for (int j = 0; j < input.length() - 1 - i; j++) {
			if (strcmp(ans[j].c_str(), ans[j + 1].c_str()) > 0) {  //strcmp 's argument are const char*, but we are using string
				swap(ans[j], ans[j + 1]);									 //use .c_str() member function change string to const char*
			}
		}
	}
	cout << "\nAfer:\n";
	cout << "The suffixes of the string are:\n";
	for (int i = 0; i < input.length(); i++) {
		cout << ans[i] << endl;
	}
	return 0;
}
