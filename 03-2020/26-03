#include <iostream>
using namespace std;

int main() {
	char max = ' ', i[20] = { 0 }, temp[20] = { 0 };
	int k, index = 0, count = 0;
	cout << "Input the integer number:\n";
	cin >> i;
	cout << "Input the value of k:\n";
	cin >> k;											//example, 4
	int left = k;                                       //remaining number of the array
	for (int j = 0; j < strlen(i); j++) {
		temp[j] = i[j];                               //example, 5378694010
	}

	cout << "The largest k bit is: ";
	for (int j = 0; j < k; j++) {
		for (int z = strlen(i)-1; z >= 0; z--) {
			if (temp[z] > max && strlen(i) - z + count>= k) {
				max = i[z];							//put the maximum data in the temp array to max, at first max = 9
				index = z;								//also store its index, at first index = 5
				count++;
			}
		}
		if (strlen(i) - index -1 >= k) {			//2 cases, the first one is the remaining number of data after max is enough for k 
			for (int x = 0; x <= index; x++) //which means data in the front is useless
				temp[x] = 0;						   //delete all data before current index (including current index)
			temp[index] = 0;
		}
		else {											//if remaining number of data after index of max (5) is not enough, in this case, 10 - 5 - 1= 4 >= 4
			temp[index] = 0;
		}
		cout << max;
		max = 0;
	}
	return 0;
}
