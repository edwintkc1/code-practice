// 雜題
// #23
// input integer to string, and k digit needed , ouput k digit maximum number from the string. 
// output need to follow the order of the string, not just ouput maximum
// input: 136845398 3
// output:898
// input: 5378694010 4
// output 9410
// input: 900743112 4
// output: 9743

#include <iostream>
using namespace std;

int main() {
	char max = ' ', i[20] = { 0 }, temp[20] = { 0 }, ans[20];
	int k, max_index = 0, count = 0;
	cout << "Input the integer number:\n";
	cin >> i;
	cout << "Input the value of k:\n";
	cin >> k;							//example, 4
	for (int j = 0; j < strlen(i); j++) {
		temp[j] = i[j];						//example, 5378694010
	}

	cout << "The largest k bit is: ";
	while (count <= k) {
		for (int j = max_index; j < strlen(i) + count - k; j++) {  //range of number must come form [0,strlen(i) + count - k]
			if (temp[j + 1] > temp[max_index])                 //check all cases, if the next number larger than current number
				max_index = j + 1;											   //change the max to next number
		}
		ans[count] = temp[max_index];				//store it
		count++;						//update count
		max_index++;						//need + 1 to next index, if have not + 1, then the max is always current number
	}
	for (int j = 0; j < k; j++) {					//print result
		cout << ans[j];
	}
	return 0;
}
