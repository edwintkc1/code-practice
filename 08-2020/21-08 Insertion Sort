#include <iostream>
#include <algorithm>
using namespace std;
#define SIZE 10

void insertionSort(int arr[])
{
    for(int i = 1; i < SIZE; i++)
    {
        int key = arr[i];
        int j = i - 1;
        while(j >= 0 && arr[j] > key)
        {
            arr[j+1] = arr[j];
            j = j-1; 
        }
        arr[j+1] = key;
    }
}


int main()
{
    cout<<"Please enter "<<SIZE<<" numbers: "<<endl;
    int arr[SIZE] = {0};
    for(int i = 0; i < SIZE; i++)
    {
        cin>>arr[i];
    }

    insertionSort(arr);

    cout<<"Sorted array: ";
    for(int i = 0;i < SIZE; i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;


    system("pause");
    return 0;
}
