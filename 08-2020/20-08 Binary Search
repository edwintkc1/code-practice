#include <iostream>
#include <algorithm>
using namespace std;
#define SIZE 10

int binarySearch(int arr[], int left, int right, int num)
{
    while(left <= right)
    {
        int mid = left + (right-left)/2;

        if(arr[mid] == num)
        {
            return mid;
        }
        else if(arr[mid] < num)  // right side
        {
            left = mid + 1;
        }
        else  // left side
        {
            right = mid - 1;
        }
    }
    return -1;  // not found

}

int main()
{
    int num = 0;
    int arr[SIZE];    
    int output;
    cout<<"Please enter " << SIZE << " integers: "<<endl;
    for(int i = 0; i < SIZE; i++)
    {
        cin>>arr[i];
    }
    cout<<"Please enter one number that you want to search: ";
    cin>>num;

    sort(arr,arr+SIZE);
    cout<<"Sorted arr: "<<endl;
    for(int i = 0 ;i < SIZE; i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;

    output = binarySearch(arr,0,SIZE-1,num);

    if(output == -1)
    {
        cout<<"No such number"<<endl;
    }
    else
    {
        cout<<"The index of "<<num<<" is "<<output<<endl;
    }
    
    system("pause");
    return 0;
}
