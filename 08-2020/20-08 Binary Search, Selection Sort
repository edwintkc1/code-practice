// Binary Search
#include <iostream>
#include <algorithm>
using namespace std;
#define SIZE 10

// 每次cut一半，如果儲存係果個index嘅value大過想搵嘅value
// 姐係個value係arr嘅左邊，將right移到宜家mid嘅左一格
// 反之，將left移到宜家mid嘅右一格
// 重複以上動作，直到cut到left == right
// 如果想搵嘅value係arr入面，就會搵到，反之，唔係arr入面，return -1

int binarySearch(int arr[], int left, int right, int num)
{
    while(left <= right)
    {
        int mid = left + (right-left)/2;

        if(arr[mid] == num)
        {
            return mid;
        }
        else if(arr[mid] < num)  // right side
        {
            left = mid + 1;
        }
        else  // left side
        {
            right = mid - 1;
        }
    }
    return -1;  // not found

}

int main()
{
    int num = 0;
    int arr[SIZE];    
    int output;
    cout<<"Please enter " << SIZE << " integers: "<<endl;
    for(int i = 0; i < SIZE; i++)
    {
        cin>>arr[i];
    }
    cout<<"Please enter one number that you want to search: ";
    cin>>num;

    sort(arr,arr+SIZE);
    cout<<"Sorted arr: "<<endl;
    for(int i = 0 ;i < SIZE; i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;

    output = binarySearch(arr,0,SIZE-1,num);

    if(output == -1)
    {
        cout<<"No such number"<<endl;
    }
    else
    {
        cout<<"The index of "<<num<<" is "<<output<<endl;
    }
    
    system("pause");
    return 0;
}

----------------------------------------------------------------------------------------------------------------
// Selection Sort
#include <iostream>
#include <algorithm>
using namespace std;
#define SIZE 10

void selectionSort(int arr[], int choice)
{
    for(int i = 0;i < SIZE-1; i++)
    {
        int minOrMax = i;
        if(choice == 1) // ascending
        {
            for(int j = i+1; j<SIZE; j++)
            {
                if(arr[j] < arr[minOrMax])
                {
                    minOrMax = j;
                }
            }
            if(minOrMax != i)
            {
                swap(arr[minOrMax],arr[i]);
            }
        }
        else // descending
        {
            for(int j = i+1; j<SIZE; j++)
            {
                if(arr[j] > arr[minOrMax])
                {
                    minOrMax = j;
                }
            }
            if(minOrMax != i)
            {
                swap(arr[minOrMax],arr[i]);
            }
        }

    }
}



int main()
{
    cout<<"Please enter "<<SIZE<<" numbers: "<<endl;
    int arr[SIZE] = {0};
    int choice = 0;
    for(int i = 0; i < SIZE; i++)
    {
        cin>>arr[i];
    }
    cout<<"Please enter a number (1. Ascending  2. Descending): ";
    cin>>choice;

    selectionSort(arr,choice);
    for(int i = 0;i < SIZE; i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    system("pause");
    return 0;
}
